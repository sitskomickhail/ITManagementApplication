<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="models.entities.Request" table="Requests" catalog="ITManagementDb">
        <id name="id" type="java.lang.Integer">
            <column name="Id" />
            <generator class="identity"/>
        </id>
        <property name="createTime" type="java.util.Date">
            <column name="CreateTime" not-null="true"/>
        </property>
        <property name="type" type="java.lang.Integer">
            <column name="Type" not-null="true"/>
        </property>
        <property name="requestDescription" type="string">
            <column name="RequestDescription" length="500" not-null="true"/>
        </property>
        <property name="resolved" type="java.lang.Boolean">
            <column name="Resolved" not-null="true"/>
        </property>
        <property name="requestDescription" type="string">
            <column name="ResolveNote" length="500" not-null="true"/>
        </property>
        <property name="workerId" type="java.lang.Integer">
            <column name="WorkerId" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>